{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "generate"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "generate": {
      "outputs": [
        "src/__generated__/**"
      ]
    },
    "format": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "clean:all": {
      "cache": false
    },
    "dev": {
      "dependsOn": [
        "generate",
        "server#build"
      ],
      "persistent": true,
      "cache": false
    }
  }
}
